<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="icon"
            type="String" />
        <variable
            name="temp"
            type="String" />
        <variable
            name="item"
            type="com.damianopatane.weatherapplication.domain.model.CityItem" />
        <variable
            name="clickListener"
            type="com.damianopatane.weatherapplication.ui.adapters.CityItemListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:onClick="@{() -> clickListener.onClick(item)}"
        android:layout_marginTop="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/txtView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                style="@style/RecyclerViewItem"
                android:text="@{item.name}"
                tools:text="City 1"/>
            <ImageView
                android:id="@+id/temp_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                app:imageUrl="@{icon}"
                style="@style/CityImage"/>
            <TextView
                android:id="@+id/txtView_current"
                style="@style/RecyclerViewItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@{temp}"
                tools:text="25" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>